{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "noImplicitAny": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "@app": [
        "./"
      ],
      "@app/*": [
        "./*"
      ]
    }
  },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
